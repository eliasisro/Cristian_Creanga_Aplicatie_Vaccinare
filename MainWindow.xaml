                <TextBox Grid.Column="0" Grid.Row="1" x:Name="txtNume" Text="" TextWrapping="Wrap" Width="120" Height="30" IsReadOnly="True" FontWeight="Medium"/>
                <TextBox Grid.Column="1" Grid.Row="1" x:Name="txtPrenume" Text="" TextWrapping="Wrap" Width="120" Height="30" IsReadOnly="True" FontWeight="Medium"/>

                <TextBox Grid.Column="5" Grid.Row="1" x:Name="txtpnLocalitate" Text="" TextWrapping="Wrap" Width="120" Height="30" IsReadOnly="True" FontWeight="Medium"/>

                <Button Grid.Column="6" Grid.Row="1" x:Name="btnAdaugaProgramare" Content="Adauga" Margin="3" Width="80" Height="30" FontWeight="Medium" />
